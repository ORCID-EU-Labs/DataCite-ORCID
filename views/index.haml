  h6.simple-search {
    font-size: 1.5em;
    color: rgb(192, 70, 62);
  }
  h6.adv-search {
    font-size: 1.5em;
    color: rgb(49, 145, 177);
  }
  h6.bib-search {
    font-size: 1.5em;
    color: rgb(181, 191, 111);
  }
  .cr-red {
    color: rgb(192, 70, 62);
  }
  .middle {
    text-align: center;
  }
  .right {
    text-align: right;
  }
  .btn {
    font-size: 1.3em;
    line-height: 1.3em;
  }

  .add-more-area {
    background-color: #fbfbfb;
